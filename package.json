{
  "name": "video-installation-app",
  "version": "1.0.0",
  "description": "Interactive Video Installation - 5-Level Biological System",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.videoinstallation.app",
    "productName": "Video Installation",
    "mac": {
      "category": "public.app-category.entertainment",
      "icon": "build/icon.icns",
      "target": ["dmg", "zip"]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": ["nsis", "portable"]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": ["AppImage", "deb"]
    },
    "files": [
      "main.js",
      "src/**/*",
      "package.json"
    ]
  },
  "keywords": ["art", "installation", "electron", "video"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
